<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="form-group">
  <thead>
    <tr>
      <th class="nav nav-tabs" >Email</th>
      <th>Name</th>
      <th>Last name</th>
      <th>Mobile phone</th>
      <th>Work place</th>
      <th>Is active?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.mobile_phone %></td>
        <td><%= user.work_place %></td>
        <td class='<%= "#{user.id.to_s}-state" %>'><%= user.is_active? %></td>
        <td class="btn btn-light"><%= link_to 'Show', user %></td>
        <td class="btn btn-secondary"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class="btn btn-danger"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td id='<%= "#{user.is_active.to_s}-inactive" %>' class='<%= "#{user.id}-inactive" %>'>
          <%= link_to 'Desactivate', "", onclick: "changeToDesactivate('#{user.id.to_s}')" %>
        </td>
        <td id='<%= "#{user.is_active.to_s}-active" %>' class='<%= "#{user.id}-active" %>'>
          <%= link_to 'Activate', "", onclick: "changeToActivate('#{user.id.to_s}')" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

